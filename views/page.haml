%h2="Campaign Monitor Subscribe Forms"

%h3=@page.name

%div="Enter your Campaign API key and List ID to add a subscribe form to <em>#{@page.name}</em>."

- if @error_message
  %div{:id => :subscribe_error, :class => "errormessagebox messagebox"}=@error_message

%form{:id => :page, :method => :post, :action => "/page/#{@page.id}"}
  ="Message:"
  %input{:type => :text, :size => 60, :name => :message, :id => :message, :value => default_subscribe_form_message}
  %br
  ="API Key:"
  %input{:type => :text, :name => :apikey, :id => :apikey, :value => @sf ? @sf.api_key : ''}
  ="List ID:"
  %input{:type => :text, :name => :listid, :id => :listid, :value => @sf ? @sf.list_id : ''}
  %br
  %input{:type => :submit, :value => "Save"}
